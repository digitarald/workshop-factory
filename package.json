{
  "name": "workshop-factory",
  "version": "0.1.0",
  "type": "module",
  "description": "Generate pedagogically structured workshops from a topic + audience, powered by GitHub Copilot",
  "license": "MIT",
  "author": "Harald Kirschner",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digitarald/workshop-factory.git"
  },
  "bin": {
    "workshop": "./dist/workshop.js"
  },
  "files": [
    "dist/*.js",
    "prompts"
  ],
  "scripts": {
    "build": "tsc --noEmit && node esbuild.config.js",
    "build:bundle": "node esbuild.config.js",
    "check": "tsc --noEmit",
    "dev": "tsc --watch --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "prepare": "npm run build"
  },
  "keywords": [
    "workshop",
    "copilot",
    "education",
    "pedagogy",
    "cli",
    "generator"
  ],
  "dependencies": {
    "@github/copilot-sdk": "^0.1.24",
    "@opentui/core": "^0.1.77",
    "@opentui/react": "^0.1.77",
    "js-yaml": "^4.1.0",
    "react": "^19.0.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/eslint__js": "^8.42.3",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.3",
    "@types/react": "^19.0.0",
    "eslint": "^10.0.0",
    "esbuild": "^0.25.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  }
}
